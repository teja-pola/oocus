{
  "name": "oocus",
  "version": "1.0.0",
  "description": "A browser extension that helps you stay focused by blurring distracting content",
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/generate-icons.mjs",
    "dev": "vite",
    "build": "tsc && vite build && node scripts/copy-assets.mjs && node scripts/update-manifest.mjs",
    "preview": "vite preview",
    "build:watch": "vite build --watch"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.22",
    "@types/chrome": "^0.0.218",
    "@types/node": "^20.19.21",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "canvas": "^3.2.0",
    "postcss": "^8.4.27",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
